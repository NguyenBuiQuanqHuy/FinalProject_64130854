<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFCBD"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Tiêu đề với hình ảnh -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/bird" />

        <TextView
            android:id="@+id/tv_TopicQuiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="Quiz App"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Thời gian đếm ngược -->
    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="Time left: 11s"
        android:textColor="#FF0000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Tiêu đề câu hỏi -->
    <TextView
        android:id="@+id/tv_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_border"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="Question here"
        android:textColor="#333333"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Các lựa chọn câu trả lời -->
    <RadioGroup
        android:id="@+id/rg_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded_border"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Option 1 -->
        <RadioButton
            android:id="@+id/rb_result1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:buttonTint="@android:color/holo_blue_dark"
            android:padding="10dp"
            android:text="Option 1"
            android:textColor="#333333"
            android:textSize="16sp" />

        <!-- Option 2 -->
        <RadioButton
            android:id="@+id/rb_result2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:buttonTint="@android:color/holo_blue_dark"
            android:padding="10dp"
            android:text="Option 2"
            android:textColor="#333333"
            android:textSize="16sp" />

        <!-- Option 3 -->
        <RadioButton
            android:id="@+id/rb_result3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:buttonTint="@android:color/holo_blue_dark"
            android:padding="10dp"
            android:text="Option 3"
            android:textColor="#333333"
            android:textSize="16sp" />

        <!-- Option 4 -->
        <RadioButton
            android:id="@+id/rb_result4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:buttonTint="@android:color/holo_blue_dark"
            android:padding="10dp"
            android:text="Option 4"
            android:textColor="#333333"
            android:textSize="16sp" />
    </RadioGroup>

    <!-- Nút Next -->

    <!-- Hai nút ngang hàng -->
    <LinearLayout
        android:id="@+id/btn_E"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_border_button"
            android:text="Exit"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_border_button"
            android:text="Next"
            android:textColor="@color/black" />
    </LinearLayout>
</LinearLayout>
